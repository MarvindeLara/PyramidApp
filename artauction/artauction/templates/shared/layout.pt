                            <a href="/" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="padding-right: 16px;">Account</a>
                            <div class="dropdown-menu">
                                <a href="/account/collection/${bidder.id}" class="dropdown-item">My Collection</a>
                                <a href="/account/bids/${bidder.id}" class="dropdown-item">My Active Bids</a>
                                <a href="/" class="dropdown-item">Profile</a>
